<%= form_with model: @article, local: true do |form| %>
  <p>
    <%= form.label :title %><br>
    <%= form.text_field :title %>
  </p>
 
  <p>
    <%= form.label :text %><br>
    <%= form.text_area :text %>
  </p>
  
  <p>
    <%= form.label :image %><br>
    <%= form.file.field :image %>
  </p>

    <%= form.submit %>
  </p>
 
<% end %>
